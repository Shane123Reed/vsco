<%= form_for @user do |u|%>
<p>
  <%= u.label :email, "Email"%>
  <%= u.text_field :email %>
</p>

<p>
  <%= u.label :password, "Password"%>
  <%= u.text_field :password %>
</p>

<p>
  <%= u.label :password_confirmation, "Confirmation"%>
  <%= u.text_field :password_confirmation %>
</p>

<p>
<%= u.submit %>
</p>

<%end%>

<%= @user.email %>